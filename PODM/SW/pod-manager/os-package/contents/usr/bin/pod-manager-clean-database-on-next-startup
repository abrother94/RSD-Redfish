USER_NAME="podm"
set -e

if [ `id -u` -ne 0 ]; then
	echo "You need root privileges to run this script"
	exit 1
fi

sudo -u ${USER_NAME} touch /var/lib/pod-manager/clear-db-on-next-startup
echo "Pod Manager database will be cleared upon next application startup."

set +e
