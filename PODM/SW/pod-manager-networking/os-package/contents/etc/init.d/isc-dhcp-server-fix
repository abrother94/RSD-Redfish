dhcp_fix() {
    echo "Applying DHCP server fix..."
    setfacl -dm u:dhcpd:rwx /var/lib/dhcp
    setfacl -m u:dhcpd:rwx /var/lib/dhcp
}

case "$1" in
    start)
	dhcp_fix
        ;;
    stop)
        ;;
    restart)
        ;;
    status)
        ;;
    *)
        echo "Usage: /etc/init.d/isc-dhcp-server-fix {start|stop|restart|status}"
        exit 1

esac

exit 0
