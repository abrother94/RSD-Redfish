#################################################################################
# Support Platform  type
#################################################################################
# Define currnt using variable depend on platform #


CURRENT_CPU_TEMP_UPPER_TH_NODE_PATH="/sys/class/hwmon/hwmon0/"
CURRENT_FAN_NODE_PATH="/sys/bus/i2c/devices/9-0066/"
CURRENT_PSU1_FAN_NODE_PATH="/sys/bus/i2c/devices/18-005b/"
CURRENT_PSU2_FAN_NODE_PATH="/sys/bus/i2c/devices/17-0058/"

eval CURRENT_THERMAL_NODE1_PATH="/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input"
eval CURRENT_THERMAL_NODE2_PATH="/sys/bus/i2c/devices/10-0048/hwmon/hwmon2/temp1_input"
eval CURRENT_THERMAL_NODE3_PATH="/sys/bus/i2c/devices/10-0049/hwmon/hwmon3/temp1_input"
eval CURRENT_THERMAL_NODE4_PATH="/sys/bus/i2c/devices/10-004a/hwmon/hwmon4/temp1_input"
eval CURRENT_THERMAL_NODE5_PATH="/sys/bus/i2c/devices/10-004b/hwmon/hwmon5/temp1_input"
eval CURRENT_THERMAL_NODE6_PATH="/sys/bus/i2c/devices/18-005b/psu_temp1_input"
eval CURRENT_THERMAL_NODE7_PATH="/sys/bus/i2c/devices/17-0058/psu_temp1_input"

CURRENT_THERMAL_NUM="7"
CURRENT_PORT_NUM="54"
CURRENT_SFP_PORT="48"
CURRENT_PSU_NUM="2"
CURRENT_FAN_NUM="8"

I2C_BUS="12"
I2C_CPLD_OFFSET="0x65"
SYSTEM_RESET_OFFSET="0x03"

SYSTEM_HALT_VALUE="0x01"
SYSTEM_RESTART_VALUE="0x02"


fans_type=("S" "S" "S" "S" "S" "S" "P" "P")

thermals_type=("C" "S" "S" "S" "S" "P" "P")

psus_type=("S" "S")



get_sfp_port_path()
{
    if [ -e "/sys/bus/i2c/devices/11-0060" ];then

	if [ -e "/sys/bus/i2c/devices/11-0060/module_present_all" ];then
# for kernel 4.x
	    if [ "${1}" -ge 1 -a "${1}" -le 24 ] ; then
# Port 1~24
		eval CURRENT_SFP_PORT_PATH="/sys/bus/i2c/devices/11-0060"
	    else
# Port 25~54
		eval CURRENT_SFP_PORT_PATH="/sys/bus/i2c/devices/12-0062" 
		    fi
	else
# for kernel 3.x				
	    if [ "${1}" -ge 1 -a "${1}" -le "${CURRENT_PORT_NUM}" ] ; then
		if [ "${1}" -ge 1 -a "${1}" -le "${CURRENT_SFP_PORT}" ] ; then
		    p=`expr $1 + 40`
			spath="${p}"-0050
			eval CURRENT_SFP_PORT_PATH="/sys/bus/i2c/devices/${spath}"
		else
		    p=`expr $1 - 24`
			spath="${p}"-0050
			eval CURRENT_SFP_PORT_PATH="/sys/bus/i2c/devices/${spath}"
			fi	
	    else
		echo "error port number"
		    fi
		    fi

		    fi
		    echo "${CURRENT_SFP_PORT_PATH}"
}

get_upper_cpu_th_thermal_temp()
{
    if [ -f "${CURRENT_CPU_TEMP_UPPER_TH_NODE_PATH}temp1_max" ];then
	UpperThresholdNonCritical=`cat ${CURRENT_CPU_TEMP_UPPER_TH_NODE_PATH}temp1_max`
	    UpperThresholdCritical=`cat ${CURRENT_CPU_TEMP_UPPER_TH_NODE_PATH}temp1_max`
	    UpperThresholdFatal=`cat ${CURRENT_CPU_TEMP_UPPER_TH_NODE_PATH}temp1_crit`
	    echo "${UpperThresholdNonCritical} ${UpperThresholdCritical} ${UpperThresholdFatal}"
    else
	echo "82000 82000 104000"
	    fi
}

get_max_fan_num()
{
    echo "${CURRENT_FAN_NUM}"
}


